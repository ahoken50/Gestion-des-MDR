rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les compteurs - Accès public pour permettre la numérotation
    match /counters/{document} {
      allow read: if true;
      // Creation: Only allow initializing to 1. Ensures updatedAt is present.
      allow create: if request.resource.data.value == 1
                    && request.resource.data.keys().hasAll(['value', 'updatedAt']);
      // Update: Only allow incrementing by 1. Ensures atomic counter integrity.
      allow update: if request.resource.data.value == resource.data.value + 1
                    && request.resource.data.keys().hasAll(['value', 'updatedAt']);
    }
    
    // Règles pour les demandes de ramassage - Accès public
    match /pickupRequests/{requestId} {
      // Lecture: accès public
      allow read: if true;
      
      // Création: accès public avec validation stricte des données
      allow create: if request.resource.data.requestNumber is number
        && request.resource.data.contactName is string
        && request.resource.data.contactPhone is string
        && request.resource.data.status in ['pending', 'in_progress', 'completed', 'cancelled']
        && request.resource.data.items is list
        && request.resource.data.items.size() > 0;
      
      // Mise à jour: accès public avec validation
      // - requestNumber ne doit pas changer (intégrité de l'ID)
      // - status doit être valide
      // - Les autres champs critiques ne doivent pas être supprimés ou corrompus si présents
      allow update: if request.resource.data.requestNumber == resource.data.requestNumber
        && request.resource.data.status in ['pending', 'in_progress', 'completed', 'cancelled']
        // Ensure critical fields remain valid if they are present (or untouched)
        && request.resource.data.contactName is string
        && request.resource.data.contactPhone is string
        && request.resource.data.items is list
        && request.resource.data.items.size() > 0;
      
      // Suppression: interdite pour le moment (protection des données)
      allow delete: if false;
    }
    
    // Règles pour l'inventaire - Accès public
    match /inventory/{itemId} {
      // Lecture: accès public
      allow read: if true;

      // Écriture (Create/Update): accès public avec validation stricte du schéma
      // Empêche l'écriture de données corrompues ou incomplètes
      allow write: if request.resource.data.name is string
        && request.resource.data.quantity is number
        && request.resource.data.location is string;
    }
  }
}

// Règles pour Firebase Storage - Accès public
service firebase.storage {
  match /b/{bucket}/o {
    // Images des demandes - Accès public
    match /requests/{requestId}/{allPaths=**} {
      // Lecture: accès public
      allow read: if true;
      
      // Écriture: accès public avec limite de taille (10MB)
      allow write: if request.resource.size < 10 * 1024 * 1024;
    }
    // Factures - Accès public. Note: Contains potentially sensitive info but app is public.
    match /invoices/{requestId}/{allPaths=**} {
      // Lecture: accès public
      allow read: if true;

      // Écriture: accès public avec limite de taille (5MB)
      allow write: if request.resource.size < 5 * 1024 * 1024;
    }
  }
}
